<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/text_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/black_87"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/item_bridge_indicator"
        app:layout_constraintTop_toTopOf="@id/item_bridge_indicator"
        tools:text="Александра Невского" />

    <TextView
        android:id="@+id/text_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/text_item_title"
        app:layout_constraintStart_toEndOf="@id/item_bridge_indicator"
        android:layout_marginStart="18dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/brownish_grey_two"
        android:lineSpacingExtra="6sp"
        tools:text="2:20 – 5:10" />

    <ImageView
        android:id="@+id/item_bridge_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:src="@drawable/ic_brige_normal" />

    <ImageView
        android:id="@+id/item_icon_bell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_item_title"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src = "@drawable/ic_kolocol_off"
        />

</androidx.constraintlayout.widget.ConstraintLayout>